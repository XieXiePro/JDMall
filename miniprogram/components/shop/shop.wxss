/* miniprogram/components/shop/shop.wxss */

.bg {
  display: flex;
  position: flex;
  bottom: 0;
  flex-direction: column;
  text-align: center;
}

.items {
  padding-bottom: 120rpx;
  width: 100%;
}

.item {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 10px;
  align-items: center;
}

.item_name {
  margin: 10px;
  padding: 10px;
  width: 300rpx;
}

.item_img {
  margin: 5px;
  padding: 5px;
}
.row {
  font-size: 12px;
  color: #ccc;
  width: 100%;
  position: flex;
  display: flex;
  flex-direction: column;
  bottom: 0;
  background: #f5f5f5;
  text-align: center;
}
