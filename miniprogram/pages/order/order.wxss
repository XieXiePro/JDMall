/* miniprogram/pages/order/order.wxss */

page {
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.backgroud {
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.items {
  margin: 10px;
  margin-top: 10px;
  display: flex;
  background-color: #fff;
  flex-direction: column;
}

.item {
  width: 100%;
  padding-left: 10px;
  padding-right: 10px;
  font-size: 15px;
  padding-top: 10px;
  display: flex;
  flex-direction: row;
}

.item_img {
  width: 10%;
  margin: 10px;
}

.item_name {
  width: 80%;
  margin: 10px;
}

.item_row {
  width: 10%;
  margin: 10px;
  right: 10px;
}
