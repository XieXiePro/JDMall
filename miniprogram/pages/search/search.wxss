/* miniprogram/pages/search/search.wxss */

.backgroud {
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.search_content {
  width: 90%;
  display: flex;
  flex-direction: row;
  border: 1px solid #ccc;
  height: 25px;
  background-color: #f6f5f3;
  border-radius: 20px;
  align-items: center;
  font-size: 15px;
  margin: 10px;
  padding: 5px;
}

.search {
  width: 80%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 15px;
  margin: 10px;
  padding: 5px;
}

.cancel_btn {
  font-size: 15px;
  color: #fff;
  text-align: center;
  border: 1px solid #ccc;
  background-color: #f6f5f3;
}

.list_title {
  display: flex;
  flex-direction: row;
  padding: 5px;
}

.left {
  width: 80%;
  font-size: 15px;
}

.right {
  width: 20%;
  font-size: 13px;
  color: #999;
  text-align: right;
}

.tips {
  padding: 10px;
}

.tip {
  background-color: #e8e8e8;
  width: 45px;
  height: 25px;
  line-height: 25px;
  border-radius: 3px;
  text-align: center;
  font-size: 13px;
  margin-right: 10px;
  float: left;
  margin-bottom: 10px;
}

.item {
  width: 100%;
  padding-left: 10px;
  padding-right: 10px;
  font-size: 15px;
  padding-top: 10px;
}

.name {
  font-size: 15px;
  padding: 5px;
  padding-bottom: 10px;
}

.hr {
  border: 1px solid #ccc;
  opacity: 0.2;
}
