/**index.wxss**/

page {
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.backgroud {
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.search {
  width: 80%;
  display: flex;
  flex-direction: row;
  border: 1px solid #ccc;
  height: 25px;
  background-color: #f6f5f3;
  border-radius: 20px;
  align-items: center;
  font-size: 15px;
  margin: 10px;
  padding: 5px;
}

.discount_title {
  display: flex;
  padding: 10px;
  color: #999;
  font-size: 15px;
}

.discount_items {
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
}

.discount_item {
  border: 1px solid #47c1c4;
  width: 48%;
  height: 80px;
  margin: 0 auto;
  background-color: #f6f5f3;
  border-radius: 5px;
  align-items: center;
}

.priceInfo {
  display: flex;
  flex-direction: row;
  padding: 5px;
}

.price {
  width: 40%;
  line-height: 40px;
  color: #47c1c4;
}

.type {
  font-size: 15px;
  color: #47c1c4;
}

.discount_type {
  font-size: 10px;
  background-color: #FFF;
  height: 15px;
  color: #FF3000;
  text-align: center;
  border-radius: 5px;
  border: 1px solid #FF3000;
}

.rmb {
  font-size: 13px;
}

.count {
  font-size: 20px;
}

.limit {
  font-size: 13px;
}

.desc {
  font-size: 12px;
  background-color: #47c1c4;
  height: 30px;
  color: #fff;
  text-align: center;
  line-height: 30px;
}
